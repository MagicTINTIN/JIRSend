    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "com.JIRSendApp.App",
            // "projectName": "JIRSend"
        },
        {
            "type": "java",
            "name": "CLI App",
            "request": "launch",
            "mainClass": "com.JIRSendApp.App",
            // "projectName": "JIRSend",
            "args": [ "--cli" ]
        },
        {
            "type": "java",
            "name": "[DEBUG] App",
            "request": "launch",
            "mainClass": "com.JIRSendApp.App",
            // "projectName": "JIRSend",
            "args": [ "--debug" ]
        },
        {
            "type": "java",
            "name": "[DEBUG] CLI App",
            "request": "launch",
            "mainClass": "com.JIRSendApp.App",
            // "projectName": "JIRSend",
            "args": [ "--cli",  "--debug" ]
        }
    ]
}